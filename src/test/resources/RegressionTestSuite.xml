<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="RegressionTestSuite" verbose="1" parallel="tests" thread-count="6">
	<test name="PositiveLoginTest-Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class
				name="com.herokuapp.theinternet.login.test.PositiveLoginTest" />
		</classes>
	</test>
	<test name="PositiveLoginTest-Firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class
				name="com.herokuapp.theinternet.login.test.PositiveLoginTest" />
		</classes>
	</test>
	<test name="NegativeLoginTest-Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class
				name="com.herokuapp.theinternet.login.test.NegativeLoginTest" />
		</classes>
	</test>
	<test name="NegativeLoginTest-Firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class
				name="com.herokuapp.theinternet.login.test.NegativeLoginTest" />
		</classes>
	</test>
	<test name="ForgotPasswordTest-Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class
				name="com.herokuapp.theinternet.forgotpassword.test.ForgotPasswordTest" />
		</classes>
	</test>
	<test name="ForgotPasswordTest-Firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class
				name="com.herokuapp.theinternet.forgotpassword.test.ForgotPasswordTest" />
		</classes>
	</test>

</suite>
